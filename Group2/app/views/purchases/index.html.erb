<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
    <% user = User.find(purchase.user_id)%>
      <tr>
        <td><%= user.name %></td>
        <td><%= purchase.total %></td>
        <td><%= link_to 'Show', purchase %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
